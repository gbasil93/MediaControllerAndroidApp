<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/tv_battery_read_ts"
        android:text="418892880"
        android:textSize="20sp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/tv_battery_read_ts"
        android:layout_margin="15dp"
        android:id="@+id/tv_battery_read_seperator"
        android:background="@color/uaGold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toEndOf="@id/tv_battery_read_seperator"
        android:text="4.068 V"
        android:textSize="20sp"
        android:id="@+id/tv_battery_read_value"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tv_holster_table_id"
        android:visibility="gone"/>

</RelativeLayout>