<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/uaGrey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/uaGold</item>
        <item name="android:actionBarStyle">@style/GreyActionBar</item>
    </style>

    <style name="GreyActionBar" parent="android:Widget.Holo.ActionBar.Solid">
        <item name="android:background">@color/uaGrey</item>
        <item name="android:titleTextStyle">@style/WhiteActionBarTitleText</item>
    </style>

    <style name="WhiteActionBarTitleText" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
